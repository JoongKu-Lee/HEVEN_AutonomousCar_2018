import numpy as np
import cv2


def Cam_Hough():
    try:
        print('카메라를 구동합니다.')
        cap = cv2.VideoCapture(1)
    except:
        print('카메라 구동 실패')
        return

    cap.set(3, 1280)
    cap.set(4, 720)

    while True:
        ret, frame = cap.read()

        if not ret:
            print('비디오 읽기 오류')
            break

        gray = cv2.cvtColor(frame, cv2.COLOR_BGR2GRAY)
        cv2.imshow('VIDEO', gray)

        edge = cv2.Canny(frame, 50, 100)
        cv2.imshow('Canny Edge', edge)

        try:
            lines = cv2.HoughLines(edge, 1, np.pi / 180, 200)
            for line in lines:
                rho, theta = line[0]
                a = np.cos(theta)
                b = np.sin(theta)
                x0 = a * rho
                y0 = b * rho
                x1 = int(x0 + 1000 * (-b))
                y1 = int(y0 + 1000 * (a))
                x2 = int(x0 - 1000 * (-b))
                y2 = int(y0 - 1000 * (a))

                cv2.line(frame, (x1, y1), (x2, y2), (255, 0, 0), 1)

            cv2.imshow('houghlines3.jpg', frame)

        except:
            cv2.imshow('houghlines3.jpg', frame)

        k = cv2.waitKey(1) & 0xFF
        if k == 27:
            break

    cap.release()
    cv2.destroyAllWindows()

Cam_Hough()

